
<h1>会員情報編集</h1>

<%= form_with model: @member_edit,url: members_information_path do |member| %>
    <table>
        <tr>
            <td>氏名</td>
            <td><%= member.text_area :last_name %></td>
            <td><%= member.text_area :first_name %></td>
        </tr>
        <tr>
            <td>フリガナ</td>
            <td><%= member.text_area :last_name_kana %></td>
            <td><%= member.text_area :first_name_kana %></td>
        </tr>
        <tr>
            <td>メールアドレス</td>
            <td><%= member.text_area :email %></td>
        </tr>
    </table>
    <%= member.submit '変更内容を保存',class: "btn btn-success" %>
    <%= link_to "退会する", members_unsubscribe_path, method: :get, data: { confilm: "本当に退会しますか？" } %>
<% end %>