<div class ="background_edit">
 <div class ="container">
  <br>
  <div class ="row">
   <div class ="col-4"></div>
   <div class ="col-4">
     <h2>会員情報編集</h2>
     <br>
   </div>
  </div>
   <%= render 'layouts/error_messages', model: @member %>
  <div class="row justify-content-center">
   <%= form_with model: @member,url: members_information_path do |member| %>
     <table class="table">
      <thead>
        <tr>
          <td class="table_co">氏名</td>
          <td><%= member.text_area :last_name %></td>
          <td><%= member.text_area :first_name %></td>
        </tr>
        <tr>
          <td class="table_co">フリガナ</td>
          <td><%= member.text_area :last_name_kana %></td>
          <td><%= member.text_area :first_name_kana %></td>
        </tr>
        <tr>
          <td class="table_co">メールアドレス</td>
          <td><%= member.text_area :email %></td>
        </tr>
      </thead>
     </table>
     <br>
     <div class="row justify-content-center">
      <%= member.submit '変更内容を保存',class: 'sign-btn'  %>
      <%= link_to "退会する", members_unsubscribe_path, method: :get,class: "nav-link" %>
     </div>
     <% end %>
  </div>
 </div>
</div>