<div class="background_form">
  <div class="container">
      <br>
      <div class="row">
       <div class="col-5">
       </div>
       <div class="col-4">
        <h2>投稿詳細画面</h2>
       </div>
      </div>
      <br>
   <div class="row justify-content-center">
     <div class="col-12">
      <table border="1">
        <tbody>
          <tr>
            <td class="table_co">
              タイトル
            </td>
            <td class="table_co">
              <%= @post_detail.title %>
            </td>
          </tr>
          <tr>
           <td class="table_co">
             投稿者
           </td>
            <td class="table_co">
              <%= @post_detail.member.last_name %> <%= @post_detail.member.first_name %>
            </td>
           </tr>
           <tr>
            <td class="table_co">
              画像
            </td>
            <% if @post_detail.image.attached? %>
              <td class="table_co">
                <%= image_tag @post_detail.image.variant(resize: '500x500') %>
              </td>
            <% end %>
           </tr>
           <tr>
            <td class="table_co">
              都道府県
            </td>
            <td class="table_co">
              <%= @post_detail.prefectues %>
            </td>
           </tr>
           <tr>
            <td class="table_co">
              住所
            </td>
            <td class="table_co">
              <%= @post_detail.area %>
            </td>
          </tr>
          <tr>
           <td class="table_co">
            アクセス
           </td>
           <td class="table_co text-left">
             <%= safe_join(@post_detail.access.split("\n"),tag(:br)) %>
           </td>
          </tr>
          <tr>
            <td class="table_co">
              周辺情報
            </td>
            <td class="table_co text-left">
              <%= safe_join(@post_detail.nearby_information.split("\n"),tag(:br)) %>
            </td>
          </tr>
          <tr>
           <td class="table_co">
            巡り方
           </td>
            <td class="table_co text-left">
              <%= safe_join(@post_detail.go_around.split("\n"),tag(:br)) %>
            </td>
          </tr>
          <tr>
            <td class="table_co">
              感想
            </td>
            <td class="table_co text-left">
              <%= safe_join(@post_detail.impressions.split("\n"),tag(:br)) %>
            </td>
          </tr>
        </tbody>
       </table>
      </div>
     </div>
     <br>
             <p class="tag_design">
               タグ:
             </p>
            <% @post_detail.tags.each do |tag| %>
            <p class="tag_age">
              <%= tag.name %>
            </p>
            <% end %>
      <% if @post_detail.favorited_by?(current_member) %>
        <p>
          <%= link_to post_bookmarks_path(@post_detail), method: :delete do %>
          ♥<%= @post_detail.bookmarks.count %>いいね
         <% end %>
        </p>
      <% else %>
        <p>
          <%= link_to post_bookmarks_path(@post_detail), style: "color: red;",method: :post do %>
          ♥<%= @post_detail.bookmarks.count %>いいね
         <% end %>
        </p>
       <% end %>

       いいね数<%= @post_detail.bookmarks.count %>

       <div>
        <p>コメント件数：<%= @post_detail.comments.count %></p>
        <% @post_detail.comments.each do |post_comment| %>
          <%= post_comment.member.full_name %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
          <% if post_comment.member == current_member %>
            <%= link_to "削除", post_comment_path(post_comment.post, post_comment), method: :delete %>
          <% end %>
        <% end %>
    </div>
    <div>
      <%= form_with model: [@post_detail, @post_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
        <%= f.submit "コメントする" %>
      <% end %>
    </div>


    <%= link_to '編集',edit_post_path(@post_detail) %>

    <%= link_to '投稿一覧に戻る',posts_path %>
