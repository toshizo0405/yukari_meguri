<div class="container">
    <br>
    <div class="row">
     <div class="col-4">
     </div>
     <div class="col-4">
      <h2>投稿入力フォーム</h2>
     </div>
    </div>
    <div class="row">
     <%= render 'layouts/error_messages', model: @post_input %>
    </div>
    <div class="row justify-content-center">
