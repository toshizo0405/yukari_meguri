    　        </tr>
              <tr>
    　          <td>
                 <%= f.label :"住所" %>
    　          </td>
    　          <td>
                 <%= f.text_field :area %>
    　          </td>
    　        </tr>
    　        <tr>
    　          <td>
                 <%= f.label :"アクセス" %>
    　          </td>
    　          <td>
                 <%= f.text_area :access %>
    　          </td>
    　        </tr>
    　        <tr>
    　          <td>
                 <%= f.label :"周辺情報" %>
