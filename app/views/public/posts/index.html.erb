<h1>投稿一覧</h1>

<table border="1" >
  <thead>
    <tr>
      <th>投稿日</th>
      <th>投稿タイトル</th>
    </tr>
  </thead>
  <% @posts.each do |input| %>
  <tbody>
    <tr>
      <td><%= input.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= input.title %></td>
    </tr>
  </tbody>
  <% end %>
</table>