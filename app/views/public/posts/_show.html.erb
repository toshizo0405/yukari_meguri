   <div class="row justify-content-center">
     <div class="col-12">
      <table border="1">
        <tbody>
          <tr>
            <td class="table_co">
              タイトル
            </td>
            <td>
              <%= post_detail.title %>
            </td>
          </tr>
          <tr>
           <td class="table_co">
             投稿者
           </td>
            <td>
              <%= post_detail.member.full_name %>
            </td>
           </tr>
           <tr>
            <td class="table_co">
              画像
            </td>
            <% if post_detail.image.attached? %>
              <td>
                <%= image_tag post_detail.image.variant(resize: '400x400') %>
              </td>
            <% else %>
              <td>
                <%= image_tag 'no_image2.jpg', size: "200x200" %>
              </td>
            <% end %>
           </tr>
           <tr>
            <td class="table_co">
              都道府県
            </td>
            <td>
              <%= post_detail.prefectues %>
            </td>
           </tr>
           <tr>
            <td class="table_co">
              住所
            </td>
            <td class="text-left">
              <%= safe_join(post_detail.area.split("\n"),tag(:br)) %>
            </td>
          </tr>
          <tr>
           <td class="table_co">
            アクセス<br>
            ※スタート地点の
           </td>
           <td class="text-left">
             <%= safe_join(post_detail.access.split("\n"),tag(:br)) %>
           </td>
          </tr>
          <tr>
            <td class="table_co">
              周辺情報
            </td>
            <td class="text-left">
              <%= safe_join(post_detail.nearby_information.split("\n"),tag(:br)) %>
            </td>
          </tr>
          <tr>
           <td class="table_co">
            巡り方
           </td>
            <td class="text-left">
              <%= safe_join(post_detail.go_around.split("\n"),tag(:br)) %>
            </td>
          </tr>
          <tr>
            <td class="table_co">
              感想
            </td>
            <td class="text-left">
              <%= safe_join(post_detail.impressions.split("\n"),tag(:br)) %>
            </td>
          </tr>
        </tbody>
       </table>
      </div>
     </div>