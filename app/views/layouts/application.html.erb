<!DOCTYPE html>
<html>
  <head>
    <title>ゆかり巡り</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-light" style="background-color: #00a3af">
        <div class="container">
          <a class="naver-brand p-3" href="/"></a>

          <bouttn class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </bouttn>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if member_signed_in? %>
                <li>
                  <%= link_to members_my_page_path, class:'nav-link text-light' do %>
                  <i class="fas fa-users"></i>マイページ
                  <% end %>
                </li>
                <li>
                  <%= link_to posts_path, class:'nav-link text-light' do %>
                  <i class="fas fa-list"></i>投稿一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_member_session_path, method: :delete,class:'nav-link text-light' do %>
                  <i class="fas fa-door-open"></i>ログアウト
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class:'nav-link text-light' do %>
                  <i class="fas fa-home"></i>about
                  <% end %>
                </li>

              <% elsif manager_signed_in? %>
                  <li>
                  <%= link_to about_path, class:'nav-link text-light' do %>
                  <i class="fas fa-home"></i>会員一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class:'nav-link text-light' do %>
                  <i class="fas fa-home"></i>投稿履歴一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_manager_session_path, method: :delete,class:'nav-link text-light' do %>
                  <i class="fas fa-home"></i>ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to new_member_registration_path, class:'nav-link text-light' do %>
                  <i class="fas fa-home"></i>新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to new_member_session_path, class:'nav-link text-light' do %>
                  <i class="fas fa-home"></i>ログイン
                  <% end %>
                </li>
                <li>
                  <%= link_to about_path, class:'nav-link text-light' do %>
                  <i class="fas fa-home"></i>about
                  <% end %>
                </li>
              <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
