<div class="background_form">
 <div class="container">
   <br>
   <div class="row">
    <div class="col-5"></div>
    <div class="col-4">
     <h2>投稿詳細(管理側)</h2>
    </div>
   </div>
   <br>
  <div class="row justify-content-center">
   <div class="col-12">
    <table border="1">
     <tbody>
      <tr>
       <td>
        タイトル
       </td>
       <td>
        <%= @post_detail.title %>
       </td>
      </tr>
      <tr>
       <td>
        画像
       </td>
      <% if @post_detail.image.attached? %>
       <td>
        <%= image_tag @post_detail.image.variant(resize: '400x400') %>
       </td>
      <% else %>
       <td>
        <%= image_tag 'no_image2', size: "200x200" %>
       </td>
       <% end %>
      </tr>
      <tr>
       <td>
        都道府県
       </td>
       <td>
        <%= @post_detail.prefectues %>
       </td>
      </tr>
      <tr>
       <td>
        住所<br>
        ※スタート地点の
       </td>
       <td>
        <%= @post_detail.area %>
       </td>
      </tr>


       <p>アクセス</p>
       <p><%= @post_detail.access %></p>

       <p>周辺情報</p>
       <p><%= @post_detail.nearby_information %></p>

       <p>巡り方</p>
       <p><%= @post_detail.go_around %></p>

       <p>感想</p>
       <p><%= @post_detail.impressions %></p>

     </tbody>
    </table>
   </div>
  </div>

      <p>タグ</p>
      <% @post_detail.tags.each do |tag| %>
      <p><%= tag.name %></p>
      <% end %>

      <p>いいね件数</p>
      <p><%= @bookmark_count %></p>

      <div>
        <p>コメント件数：<%= @post_detail.comments.count %></p>
        <% @post_detail.comments.each do |post_comment| %>
          <%= post_comment.member.full_name %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
          <%= link_to "削除", admin_post_comment_path(post_comment.post, post_comment), method: :delete %>
        <% end %>
       </div>


    <%= link_to '削除する',admin_post_path(@post_detail),method: :delete %>

    <%= link_to '前のページに戻る',admin_root_path %>

 </div>
</div>