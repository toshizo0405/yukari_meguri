<div class="background_complete">
 <div class="container">
    <br>
    <div class="row">
     <div class="col-1"></div>
     <div class="col-8">
      <%= link_to "会員詳細画面に戻る", admin_member_path(@member),class: 'sign-btn' %>
    </div>
   </div>
<%= render 'public/members/index', member: @member,post_Individual: @post_Individual %>
<div class="row">
   <div class="col-1"></div>
   <div class="col-10">
        <table border="1" >
          <thead>
            <tr>
              <th>投稿日</th>
              <th>投稿タイトル</th>
              <th>コメント数</th>
            </tr>
          </thead>
          <tbody>
            <% @post_Individual.each do |post| %>
            <tr>
              <td><%= post.created_at.in_time_zone('Tokyo').strftime('%Y-%m-%d %H:%M:%S') %></td>
              <td><%= link_to post.title, admin_post_path(post) %></td>
              <td><%= "#{post.comments.count} コメント" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
     </div>
     <br>
    <div class="row">
     <div class="col-5"></div>
     <div class="col-4">
        <%= paginate @post_Individual %>
     </div>
    </div>
 </div>
</div>